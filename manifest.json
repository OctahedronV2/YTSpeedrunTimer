{
    "manifest_version": 3,
    "name": "YT Speedrun Timer",
    "description": "A chrome browser extension that can be used on YouTube to time runs quickly and efficiently.",
    "version": "1.0",
    "action": {
      "default_popup": "index.html",
      "default_icon": "images/icon-128.png"
    },
    "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "content_scripts": [
      {
        "js": ["scripts/timingtool.js"],
        "matches": [
          "https://www.youtube.com/*",
          "https://m.youtube.com/*"
        ]
      }
    ]
  }